<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/expense_bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorBottom"
    android:orientation="vertical"
    android:padding="@dimen/activity_margin"

    app:behavior_hideable="true"
    app:behavior_peekHeight="52dp"
    android:outlineSpotShadowColor="@color/colorAccent"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior"


    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Memorable Places"
        android:textSize="17dp"
        android:layout_marginLeft="85dp"
        android:textColor="@color/colorWhite"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linearlayoutId">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/memorableImageFromCameraIvId"
                android:src="@drawable/ic_photo_camera_black_24dp"
                android:background="@color/colorWhite"
                android:layout_marginLeft="120dp"
                />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/memorableImageFromGalleryIvId"
                android:src="@drawable/ic_image_black_24dp"
                android:background="@color/colorWhite"
                android:layout_marginLeft="20dp"
                />


        </LinearLayout>

        <EditText
            android:id="@+id/memorableCaptionEtId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/colorWhite"
            android:fontFamily="sans-serif-light"
            android:hint="Caption"

            android:textColor="@color/colorWhite"
            android:textColorHint="@color/colorWhite"
            android:textSize="17sp" />

        <Button
            android:id="@+id/uploadBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/button_white"
            android:text="Upload"
            android:textColor="@color/colorPrimary" />

    </LinearLayout>

</LinearLayout>